<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/id_card"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="4dp"
                app:cardElevation="3dp"
                app:cardMaxElevation="3dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/rlTituloEbotoes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:id="@+id/tvTituloCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_calendar"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/ic_calendar"
                            android:gravity="center_vertical"
                            android:text="@string/titulo_card_data_hora"
                            android:textColor="@android:color/black" />

                        <android.support.v7.widget.CardView
                            android:id="@+id/cdCTe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_toLeftOf="@+id/cdAdiant"
                            android:layout_toStartOf="@+id/cdAdiant"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/colorAccent">

                            <RelativeLayout
                                android:layout_width="56dp"
                                android:layout_height="17dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginStart="4dp"
                                    android:text="@string/cte"
                                    android:textColor="@android:color/white"
                                    android:textSize="10sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="4dp"
                                    android:layout_marginRight="4dp"
                                    app:srcCompat="@drawable/ic_copyright" />

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cdAdiant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="#33CC33">

                            <RelativeLayout
                                android:layout_width="56dp"
                                android:layout_height="17dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginStart="4dp"
                                    android:text="@string/adiant"
                                    android:textColor="@android:color/white"
                                    android:textSize="10sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="4dp"
                                    android:layout_marginRight="4dp"
                                    app:srcCompat="@drawable/ic_cash" />


                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvDataHora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlTituloEbotoes"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="24dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:text="DATA - HORA"
                        android:textColor="@android:color/black"
                        android:textSize="22sp" />

                    <ImageView
                        android:id="@+id/ivMapa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvDataHora"
                        android:src="@drawable/placeholder_map" />

                    <RelativeLayout
                        android:id="@+id/rlColetarEm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivMapa">

                        <TextView
                            android:id="@+id/tvTituloColetarEm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="16dp"
                            android:drawableLeft="@drawable/ic_coletar"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/ic_coletar"
                            android:gravity="center_vertical"
                            android:text="@string/titulo_card_coletar_em"
                            android:textColor="@color/colorPrimaryDark" />

                        <TextView
                            android:id="@+id/tvRuaNumero"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvTituloColetarEm"
                            android:layout_marginLeft="40dp"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:text="Street - Number"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tvCidadeEstadoZip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvRuaNumero"
                            android:layout_marginLeft="40dp"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:text="Cidade - Estado - ZIP"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tvVerMenos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvCidadeEstadoZip"
                            android:layout_marginBottom="24dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/ver_menos"
                            android:textColor="@color/colorAccent" />

                        <View
                            android:id="@+id/view1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/tvVerMenos"
                            android:background="@color/colorPrimary" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/tvTituloEntregarEm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlColetarEm"
                        android:layout_marginEnd="16dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="168dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_coletar"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/ic_coletar"
                            android:gravity="center_vertical"
                            android:text="@string/titulo_card_entregar_em"
                            android:textColor="@color/colorPrimaryDark" />

                        <TextView
                            android:id="@+id/tvOrdemColeta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="@string/ver_ordem_coleta"
                            android:textColor="@color/colorAccent" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvEntregarEmRuaNumero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tvDataHora"
                        android:layout_alignStart="@+id/tvDataHora"
                        android:layout_below="@+id/tvTituloEntregarEm"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="Street - Number"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvEntregarEmCidadeEstadoZip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tvDataHora"
                        android:layout_alignStart="@+id/tvDataHora"
                        android:layout_below="@+id/tvEntregarEmRuaNumero"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="Cidade - Estado - ZIP"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvVerMenosEmRota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvEntregarEmCidadeEstadoZip"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/ver_menos"
                        android:textColor="@color/colorAccent" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tvVerMenosEmRota"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorPrimary" />

                    <!-- EM TRÂNSITO - EM ROTA -->

                    <RelativeLayout
                        android:id="@+id/rlEmTransito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view2">

                        <ImageView
                            android:id="@+id/ivIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            app:srcCompat="@drawable/ic_truck_waiting" />

                        <TextView
                            android:id="@+id/tvEmTransito"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="16dp"
                            android:layout_toEndOf="@+id/ivIcon"
                            android:layout_toRightOf="@+id/ivIcon"
                            android:gravity="center_vertical"
                            android:text="@string/em_transito"
                            android:textColor="@android:color/black" />

                        <LinearLayout
                            android:id="@+id/llFluxoEntrega"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvEmTransito"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_toEndOf="@+id/ivIcon"
                            android:layout_toRightOf="@+id/ivIcon"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivEstado1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@drawable/ic_circle_check" />

                            <View
                                android:id="@+id/lineEstado1"
                                android:layout_width="22dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/colorAccent" />

                            <ImageView
                                android:id="@+id/ivEstado2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@drawable/ic_circle_check" />

                            <View
                                android:id="@+id/lineEstado2"
                                android:layout_width="22dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/colorAccent" />

                            <ImageView
                                android:id="@+id/ivEstado3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@drawable/ic_circle_ativo" />

                            <View
                                android:id="@+id/lineEstado3"
                                android:layout_width="22dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/colorPrimaryDark" />

                            <ImageView
                                android:id="@+id/ivEstado4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@drawable/ic_circle_wait" />

                            <View
                                android:id="@+id/lineEstado4"
                                android:layout_width="22dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/colorPrimaryDark" />

                            <ImageView
                                android:id="@+id/ivEstado5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@drawable/ic_circle_wait" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/llFluxoEntrega"
                            android:background="@color/colorPrimary" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlVeiculo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/rlEmTransito">

                        <ImageView
                            android:id="@+id/ivIconeVeiculo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:tint="@color/colorPrimaryDark"
                            app:srcCompat="@drawable/ic_menu_prox_coletas" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="17dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="17dp"
                            android:layout_toEndOf="@id/ivIconeVeiculo"
                            android:layout_toRightOf="@id/ivIconeVeiculo">

                            <TextView
                                android:id="@+id/tvTituloVeiculo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/veiculo"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvVeiculo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvTituloVeiculo"
                                android:layout_marginTop="2dp"
                                android:text="Nome veiculo"
                                android:textColor="@android:color/black" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/rlVeiculo"
                        android:background="@color/colorPrimary" />

                    <RelativeLayout
                        android:id="@+id/rlProdutos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/view3">

                        <ImageView
                            android:id="@+id/ivIconeProdutos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:tint="@color/colorPrimaryDark"
                            app:srcCompat="@drawable/ic_products" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="17dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="17dp"
                            android:layout_toEndOf="@id/ivIconeProdutos"
                            android:layout_toRightOf="@id/ivIconeProdutos">

                            <TextView
                                android:id="@+id/tvTituloProdutos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/produtos"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvProdutos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvTituloProdutos"
                                android:layout_marginTop="2dp"
                                android:text="Tipo Produtos"
                                android:textColor="@android:color/black" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/rlProdutos"
                        android:background="@color/colorPrimary" />

                    <RelativeLayout
                        android:id="@+id/rlPeso"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/view4">

                        <ImageView
                            android:id="@+id/ivIconePeso"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:tint="@color/colorPrimaryDark"
                            app:srcCompat="@drawable/ic_weight" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="17dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="17dp"
                            android:layout_toEndOf="@id/ivIconePeso"
                            android:layout_toRightOf="@id/ivIconePeso">

                            <TextView
                                android:id="@+id/tvTituloPeso"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/peso"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvPeso"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvTituloPeso"
                                android:layout_marginTop="2dp"
                                android:text="Peso Produtos"
                                android:textColor="@android:color/black" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <View
                        android:id="@+id/view5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/rlPeso"
                        android:background="@color/colorPrimary" />

                    <Button
                        android:id="@+id/btnColetar"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view5"
                        android:text="@string/vou_coletar"
                        android:textColor="@color/colorAccent" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
